{
    "name": "livepetal/e-commerce-platform",
    "description": "Multi-tenant e-commerce platform with JWT authentication",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "cloudinary/cloudinary_php": "^2.14",
        "sentry/sentry": "^4.19",
        "zircote/swagger-php": "^4.7",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "doctrine/annotations": "^2.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "backend/"
        },
        "files": [
            "backend/helpers/functions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}