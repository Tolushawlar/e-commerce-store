{
  "name": "e-commerce-platform",
  "version": "2.0.0",
  "description": "Multi-tenant e-commerce platform with PHP MVC architecture",
  "scripts": {
    "api": "cd api && php -S localhost:8000 router.php",
    "app": "php -S localhost:3000 -t app",
    "dev": "concurrently \"npm run api\" \"npm run app\" --names \"API,APP\" --prefix-colors \"blue,green\"",
    "start": "npm run dev",
    "api:prod": "cd api && php -S 0.0.0.0:8000 router.php",
    "app:prod": "php -S 0.0.0.0:3000 -t app",
    "test": "echo \"No tests configured yet\" && exit 0",
    "openapi": "php api/generate-openapi.php > api/openapi.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tolushawlar/e-commerce-store.git"
  },
  "keywords": [
    "ecommerce",
    "php",
    "mvc",
    "rest-api",
    "multi-tenant"
  ],
  "author": "Tolushawlar",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
